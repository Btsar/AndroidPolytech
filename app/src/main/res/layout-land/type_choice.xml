<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TypeListActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Veuillez choisir un type d'incident"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonOrdi"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/ordi"
        app:layout_constraintStart_toStartOf="@+id/buttonImpr"
        app:layout_constraintTop_toBottomOf="@+id/buttonImpr" />

    <Button
        android:id="@+id/buttonChauff"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/chauff"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/buttonImpr"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/impr"
        app:layout_constraintEnd_toStartOf="@+id/buttonCafe"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonElec"
        app:layout_constraintTop_toTopOf="@+id/buttonElec" />

    <Button
        android:id="@+id/buttonProbl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/probl"
        app:layout_constraintStart_toStartOf="@+id/buttonCafe"
        app:layout_constraintTop_toBottomOf="@+id/buttonCafe" />

    <Button
        android:id="@+id/buttonCafe"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/cafe"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/buttonAutres"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/autres"
        app:layout_constraintStart_toStartOf="@+id/buttonElec"
        app:layout_constraintTop_toBottomOf="@+id/buttonElec" />

    <Button
        android:id="@+id/buttonElec"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:background="@drawable/elec"
        app:layout_constraintStart_toEndOf="@+id/buttonChauff"
        app:layout_constraintTop_toTopOf="@+id/buttonChauff" />

    <Button
        android:id="@+id/buttonChat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/chats"
        app:layout_constraintStart_toStartOf="@+id/buttonChauff"
        app:layout_constraintTop_toBottomOf="@+id/buttonChauff" />

</android.support.constraint.ConstraintLayout>